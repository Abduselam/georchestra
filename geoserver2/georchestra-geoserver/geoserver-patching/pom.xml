<?xml version="1.0" encoding="ISO-8859-1"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.georchestra</groupId>
		<artifactId>georchestra-geoserver</artifactId>
		<version>1.0</version>
	</parent>
	<artifactId>geoserver-patching</artifactId>
	<packaging>pom</packaging>
	<name>Patching Geoserver checkout</name>
	<properties>
		<maven.test.skip>true</maven.test.skip>
		<gs.dir>${project.basedir}/../geoserver-checkouts</gs.dir>
	</properties>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-patch-plugin</artifactId>
				<version>1.1.1</version>
				<configuration>
					<patches>
						<patch>GEOSERVER.patch</patch>
						<patch>WFS.patch</patch>
						<patch>maven-web-app.patch</patch>
						<patch>maven-config.patch</patch>
						<patch>maven3.patch</patch>
						<patch>web-app-web-xml.patch</patch>
					</patches>
					<targetDirectory>${patch.dir}</targetDirectory>
					<strip>0</strip>
					<backups>false</backups>
				</configuration>
				<executions>
					<execution>
						<id>patch</id>
						<phase>process-sources</phase>
						<goals>
							<goal>apply</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.1</version>
				<executions>
					<execution>
						<id>clean</id>
						<phase>clean</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>mvn</executable>
							<commandlineArgs>clean</commandlineArgs>
							<workingDirectory>${gs.dir}</workingDirectory>
						</configuration>
					</execution>
					<execution>
						<id>install</id>
						<phase>install</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>mvn</executable>
							<commandlineArgs>install -Dserver=${server} -Dmaven.test.skip</commandlineArgs>
							<workingDirectory>${gs.dir}</workingDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>geoserver-2.1.x</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<patch.dir>${gs.dir}/geoserver-2.1.x</patch.dir>
			</properties>
		</profile>
		<profile>
			<id>geoserver-2.1.1</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<patch.dir>${gs.dir}/geoserver-stable</patch.dir>
			</properties>
		</profile>
	</profiles>
</project>
